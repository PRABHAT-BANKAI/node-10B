<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <form action="/insertAddData" method="post">
      <table>
        <tr>
          <td>Name:</td>
          <td>
            <input type="text" placeholder="enter your name" name="userName" />
          </td>
        </tr>
        <tr>
          <td>Password:</td>
          <td>
            <input
              type="password"
              placeholder="enter your password"
              name="password"
            />
          </td>
        </tr>
        <tr>
          <td></td>
          <td><button type="submit">add Data</button></td>
        </tr>
      </table>
    </form>

    <table border="">
      <tr>
        <td>name</td>
        <td>password</td>
        <td>action</td>
      </tr>

      <% userData.map((data)=>{ %>
      <tr>
        <td><%= data.userName %></td>
        <td><%= data.password %></td>
        <td>
          <!-- params -->
          <a href="/deleteData/<%= data.id %> "><button>delete</button></a>
          <!-- <a href="/deleteData/?id=<%= data.id %> "><button>delete</button></a> -->
          <a href="/update/<%= data.id %> "><button>update</button></a>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
